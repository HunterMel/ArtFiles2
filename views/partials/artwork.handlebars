<div class="art-list">
    {{#each posts as |post|}}

    <div class="col">
        <div class="card">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{post.title}}</h5>
                <p class="card-text">
                    <li id="artist">{{post.artist.artist_name}}</li>
                    <li>{{post.medium}}</li>
                    <li>{{post.date}}</li>
                    <li>{{post.style}}</li>
                    <li>{{post.location}}</li>
                </p>
            </div>
        </div>
    </div>
    
    {{/each}}
    </div>


<div class="row row-cols-1 row-cols-md-3 g-4">